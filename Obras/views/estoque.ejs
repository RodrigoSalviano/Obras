<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Estoque</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
<nav class="navbar navbar-light bg-white shadow-sm">
  <div class="container">
    <a class="navbar-brand fw-semibold" href="/">Obras Paraguaçu</a>
    <a href="/chamados/novo" class="btn btn-outline-secondary btn-sm">Abrir Chamado</a>
  </div>
</nav>

<main class="container my-4">
  <h4 class="fw-bold text-center mb-4">Estoque</h4>

  <!-- Adicionar -->
  <div class="card card-rounded mb-4">
    <div class="card-body">
      <h5 class="fw-bold text-center mb-3">Adicionar Item ao Estoque</h5>
      <form action="/estoque/add" method="POST" class="row g-3">
        <div class="col-12">
          <input class="form-control" name="nome" placeholder="Nome do Item" required>
        </div>
        <div class="col-12">
          <textarea class="form-control" name="descricao" rows="2" placeholder="Descrição do Item"></textarea>
        </div>
        <div class="col-md-3">
          <input type="number" class="form-control" name="quantidade" placeholder="Quantidade" required value="1" min="0">
        </div>
        <div class="col-12">
          <button class="btn btn-primary">Adicionar</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Filtrar -->
  <div class="card card-rounded mb-4">
    <div class="card-body">
      <h5 class="fw-bold text-center mb-3">Filtrar Itens</h5>
      <form class="row g-2" method="GET" action="/estoque">
        <div class="col-md-6">
          <input class="form-control" name="q" value="<%= q %>" placeholder="Buscar por nome">
        </div>
        <div class="col-auto">
          <button class="btn btn-outline-secondary">Filtrar</button>
        </div>
        <div class="col-auto">
          <a class="btn btn-outline-dark" href="/estoque">Limpar</a>
        </div>
      </form>
    </div>
  </div>

  <!-- Listagem -->
  <div class="card card-rounded">
    <div class="card-body">
      <h5 class="fw-bold text-center mb-3">Itens no Estoque</h5>
      <div class="table-responsive">
        <table class="table align-middle">
          <thead>
            <tr>
              <th>ID</th>
              <th>Nome</th>
              <th>Descrição</th>
              <th>Quantidade</th>
              <th>Data de Entrada</th>
              <th>Status</th>
              <th>Ações</th>
            </tr>
          </thead>
          <tbody>
            <% if (itens.length === 0) { %>
              <tr><td colspan="7" class="text-center text-muted">Nenhum item encontrado.</td></tr>
            <% } %>
            <% itens.forEach(item => { %>
              <tr>
                <td><%= item.id %></td>
                <td><%= item.nome %></td>
                <td><%= item.descricao || "-" %></td>
                <td><%= item.quantidade %></td>
                <td><%= item.dataEntrada %></td>
                <td><%= item.status %></td>
                <td class="d-flex gap-2">
                  <form action="/estoque/delete/<%= item.id %>" method="POST">
                    <button class="btn btn-sm btn-danger">Excluir</button>
                  </form>
                  <form action="/estoque/update/<%= item.id %>" method="POST" class="d-flex gap-2">
                    <input type="number" name="quantidade" value="<%= item.quantidade %>" min="0" class="form-control form-control-sm" style="width:80px">
                    <button class="btn btn-sm btn-primary">Atualizar</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
</body>
</html>
